# Auto detect text files and perform LF normalization
* text=auto

# Unity-specific files
*.cs text eol=lf
*.js text eol=lf
*.boo text eol=lf
*.shader text eol=lf
*.cginc text eol=lf
*.hlsl text eol=lf

# Unity meta files
*.meta text eol=lf

# Unity project files
*.unity text eol=lf
*.prefab text eol=lf
*.asset text eol=lf
*.mat text eol=lf
*.anim text eol=lf
*.controller text eol=lf
*.overrideController text eol=lf

# Text files
*.txt text eol=lf
*.md text eol=lf
*.xml text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

